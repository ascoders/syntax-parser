{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "strictNullChecks": false,
    "jsx": "react",
    "target": "esnext",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "baseUrl": ".",
    "lib": [
      "dom",
      "es5",
      "es6",
      "es7",
      "scripthost",
      "es2018.promise"
    ],
    "emitDecoratorMetadata": true,
    "preserveConstEnums": true,
  },
  "include": [
    ".temp/**/*",
    "typings/**/*",
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
